  <!-- جافاسكريبت لعمل التصفح بالصفحات -->
  <script>
    $(document).ready(function() {
      // استدعاء للصفحة التالية من الرسائل
      $('.load-more-messages').click(function() {
        const $button = $(this);
        const conversationId = $('.conversation-detail-wrapper').data('conversation-id');
        const currentPage = parseInt($button.data('current-page'));
        const nextPage = currentPage + 1;
        
        // تغيير حالة الزر
        $button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> جاري التحميل...');
        
        // طلب الصفحة التالية من الرسائل
        $.ajax({
          url: `/crm/conversations/ajax/details/${conversationId}?page=${nextPage}`,
          type: 'GET',
          success: function(response) {
            // استخراج الرسائل الجديدة فقط من الاستجابة
            const $newResponse = $(response);
            const $newMessages = $newResponse.find('.message');
            
            // إضافة الرسائل الجديدة في بداية قائمة الرسائل (لأنها الأقدم)
            $('#messageContainer').prepend($newMessages);
            
            // تحديث زر التحميل أو إخفائه إذا وصلنا لنهاية الرسائل
            const hasMore = $newResponse.find('.load-more-messages').length > 0;
            if (hasMore) {
              $button
                .prop('disabled', false)
                .html(`تحميل المزيد من الرسائل (${nextPage}/${$button.data('total-pages')})`)
                .data('current-page', nextPage);
            } else {
              $button.parent().remove(); // إزالة الزر إذا وصلنا للنهاية
            }
            
            // تفعيل المشغلات للوسائط الجديدة
            if (window.setupAudioPlayers) {
              window.setupAudioPlayers();
            }
            
            // إعادة تفعيل مراقب الرسائل المرئية
            document.dispatchEvent(new CustomEvent('messages-updated'));
          },
          error: function() {
            $button.prop('disabled', false).html('حدث خطأ أثناء التحميل. حاول مرة أخرى.');
          }
        });
      });
      
      // تعريف دالة عرض قائمة القراء
      window.showReadByUsers = function(messageId) {
        const modal = $('#readByUsersModal');
        const contentArea = $('#readByUsersContent');
        const loadingSpinner = contentArea.find('.loading-spinner');
        const readByList = contentArea.find('.read-by-list');
        const noReadersAlert = contentArea.find('.no-readers');
        
        // إعادة تعيين المحتوى
        readByList.html('').hide();
        noReadersAlert.hide();
        loadingSpinner.show();
        
        // عرض النافذة
        modal.modal('show');
        
        // طلب قائمة القراء
        fetch(`/api/messages/${messageId}/read-by`)
          .then(response => response.json())
          .then(data => {
            loadingSpinner.hide();
            
            if (data.success && data.readers && data.readers.length > 0) {
              // عرض قائمة القراء
              data.readers.forEach(reader => {
                const readTime = new Date(reader.readAt).toLocaleString('ar-LY');
                readByList.append(`
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                      <i class="fas fa-user me-2"></i> ${reader.username || 'مستخدم غير معروف'}
                    </div>
                    <span class="badge bg-secondary">${readTime}</span>
                  </li>
                `);
              });
              readByList.show();
            } else {
              // عرض رسالة لا يوجد قراء
              noReadersAlert.show();
            }
          })
          .catch(error => {
            loadingSpinner.hide();
            contentArea.html(`
              <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-1"></i> حدث خطأ أثناء تحميل البيانات.
              </div>
            `);
            console.error('خطأ في جلب قائمة القراء:', error);
          });
      };
    });
  </script>

